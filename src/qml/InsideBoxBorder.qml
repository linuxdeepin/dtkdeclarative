import QtQuick 2.0

Item {
    property real borderWidth: 1
    property color color: "white"
    property alias radius: rect.radius

    Rectangle {
        id: rect

        anchors.fill: parent
        color: "transparent"

        border {
            width: borderWidth
            color: parent.color
        }
    }
}
